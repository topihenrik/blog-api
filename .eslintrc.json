{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": "error",
        "no-trailing-spaces": "error",
        "no-var": "error",
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "eol-last": "error",
        "object-curly-spacing": ["error", "always"],
        "key-spacing": ["error", {"beforeColon": false, "afterColon": true}]
    }
}
